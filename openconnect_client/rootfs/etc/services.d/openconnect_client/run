#!/usr/bin/with-contenv bashio
# ==============================================================================
# Home Assistant Community Add-on: WireGuard Client
# Runs WireGuard Client
# ==============================================================================
declare interface

s6-svc -O /var/run/s6/services/openconnect_client

bashio::log.info "Starting Openconnect Client..."

# This is alpha software. We need to set this to instruct
# WireGuard we are OK to go.
export OC_I_PREFER_BUGGY_USERSPACE_TO_POLISHED_KMOD=1

# Get the interface
interface="oc0"

# Run the WireGuard
exec wg-quick up "${interface}"
